{
  "name": "dudebank",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "start": "bun run dist/index.js",
    "docker:build": "docker compose -f docker-compose.yml build",
    "docker:up": "docker compose -f docker-compose.yml up",
    "docker:down": "docker compose -f docker-compose.yml down",
    "docker:start:clean": "./scripts/docker-start-clean.sh",
    "type-check": "bunx tsc --noEmit"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "async-mutex": "^0.5.0",
    "decimal.js": "^10.6.0"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}
